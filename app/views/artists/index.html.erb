<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Bio</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
    <tr>
      <td><%= link_to(artist&.name, artist_path(artist)) %></td>
      <td><%= artist&.location %></td>
      <td><%= artist&.bio %></td>
    </tr>
    <% end %>
  </tbody>
</table>